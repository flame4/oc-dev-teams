{
  "display_information": {
    "name": "ENG Bot",
    "description": "AI Dev Team - Engineer",
    "background_color": "#2c2d30"
  },
  "features": {
    "bot_user": {
      "display_name": "ENG Bot",
      "always_online": true
    },
    "app_home": {
      "messages_tab_enabled": true,
      "messages_tab_read_only_enabled": false
    }
  },
  "oauth_config": {
    "scopes": {
      "bot": [
        "app_mentions:read",
        "chat:write",
        "channels:history",
        "channels:read",
        "channels:join",
        "groups:history",
        "groups:read",
        "im:history",
        "im:read",
        "mpim:history",
        "users:read",
        "reactions:read",
        "reactions:write",
        "pins:read",
        "pins:write",
        "files:read",
        "files:write"
      ]
    }
  },
  "settings": {
    "event_subscriptions": {
      "bot_events": [
        "app_mention",
        "message.channels",
        "message.groups",
        "message.im",
        "message.mpim",
        "reaction_added",
        "reaction_removed",
        "member_joined_channel",
        "member_left_channel"
      ]
    },
    "socket_mode_enabled": true,
    "org_deploy_enabled": false,
    "token_rotation_enabled": false
  }
}